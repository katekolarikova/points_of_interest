{{> welcome-menu active="signup"}}

<section class="section">
  <h1 class="title">Log in</h1>
  <form action="/authenticate" method="POST">
    <div class="field">
      <label class="label">Nickname</label> <input class="input" type="password" placeholder="Enter Nickname" name="nickname">
    </div>
    <div class="field">
      <label class="label">Password</label> <input class="input" type="password" placeholder="Enter Password" name="password">
    </div>
    <div class="field is-grouped">
      <button class="button is-link">Submit</button>
    </div>
  </form>
</section>