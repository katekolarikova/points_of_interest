{{> welcome-menu-dashboard active="signup"}}

<section class="section">
  <h1 class="title">Sign up</h1>
  <form action="/admin/updateuser/submit/{id}" method="POST">
    <div class="field">
      <label class="label">Name</label>
      <input class="input" type="text" placeholder="Enter name" name="name" value={{name}}>
    </div>
    <div class="field">
      <label class="label">Email</label>
      <input class="input" type="text" placeholder="Enter email" name="email" value={{email}}>
    </div>
    <div class="field">
      <label class="label">Nickname</label>
      <input class="input" type="text" placeholder="Enter Nickname" name="nickname" value={{nickname}}>
    </div>
    <div class="field">
      <label class="label">Password</label>
      <input class="input" type="text" placeholder="Enter Password" name="password" value={{password}}>
    </div>
    <div class="field">
      <label class="label">Admin</label>
      <input class="input" type="text" placeholder="Enter True for creating user" name="admin" value={{admin}}>
    </div>
    <input class="input" type="hidden" name="poiId" value="{{userId}}">
    <div class="field is-grouped">
      <button class="button is-link">Submit</button>
    </div>
  </form>
</section>